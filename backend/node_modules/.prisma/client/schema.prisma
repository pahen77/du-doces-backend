// Prisma schema para a DuÂ Doces

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelagem de Produto
model Product {
  id        String   @id @default(cuid())
  name      String
  brand     String?
  category  String
  price     Decimal  @db.Decimal(10, 2)
  imageUrl  String?
  promo     Boolean  @default(false)
  unitType  String // "unidade" ou "fardo"
  size      String?
  flavor    String?
  packQty   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
